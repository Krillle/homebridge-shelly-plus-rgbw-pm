{
  "pluginAlias": "ShellyPlusRGBWPM",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Shelly Plus RGBW PM",
  "schema": {
    "type": "object",
    "required": [
      "name"
    ],
    "anyOf": [
      {
        "required": [
          "devices"
        ]
      },
      {
        "required": [
          "host"
        ]
      }
    ],
    "properties": {
      "name": {
        "title": "Display Name",
        "type": "string",
        "default": "Shelly Plus RGBW PM"
      },
      "devices": {
        "title": "Shelly Devices",
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": [
            "host"
          ],
          "properties": {
            "name": {
              "title": "Device Name",
              "type": "string",
              "default": "Shelly Plus RGBW PM"
            },
            "host": {
              "title": "IP Address or mDNS Name",
              "type": "string",
              "placeholder": "192.168.1.60 or shellyplusrgbwpm.local"
            },
            "showDimmer1": {
              "title": "Show Dimmer 1",
              "type": "boolean",
              "default": true
            },
            "showDimmer2": {
              "title": "Show Dimmer 2",
              "type": "boolean",
              "default": true
            },
            "showDimmer3": {
              "title": "Show Dimmer 3",
              "type": "boolean",
              "default": true
            },
            "showDimmer4": {
              "title": "Show Dimmer 4",
              "type": "boolean",
              "default": true
            }
          }
        }
      },
      "host": {
        "title": "Legacy: Single Device Host",
        "type": "string",
        "placeholder": "192.168.1.60 or shellyplusrgbwpm.local"
      },
      "showDimmer1": {
        "title": "Legacy: Show Dimmer 1",
        "type": "boolean",
        "default": true
      },
      "showDimmer2": {
        "title": "Legacy: Show Dimmer 2",
        "type": "boolean",
        "default": true
      },
      "showDimmer3": {
        "title": "Legacy: Show Dimmer 3",
        "type": "boolean",
        "default": true
      },
      "showDimmer4": {
        "title": "Legacy: Show Dimmer 4",
        "type": "boolean",
        "default": true
      }
    }
  },
  "form": [
    "name",
    "devices",
    {
      "type": "help",
      "helpvalue": "Use the Shelly Devices list to add one or more devices. The legacy single-device fields below are optional for older configs."
    },
    {
      "type": "fieldset",
      "title": "Legacy Single-Device Fields",
      "expandable": true,
      "expanded": false,
      "items": [
        "host",
        "showDimmer1",
        "showDimmer2",
        "showDimmer3",
        "showDimmer4"
      ]
    }
  ]
}

{
  "pluginAlias": "ShellyPlusRGBWPM",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Shelly Plus RGBW PM",
  "schema": {
    "type": "object",
    "required": [
      "name",
      "devices"
    ],
    "properties": {
      "name": {
        "title": "Display Name",
        "type": "string",
        "default": "Shelly Plus RGBW PM"
      },
      "devices": {
        "title": "Shelly Devices",
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": [
            "host"
          ],
          "properties": {
            "name": {
              "title": "Device Name",
              "type": "string",
              "default": "Shelly Plus RGBW PM"
            },
            "host": {
              "title": "IP Address or mDNS Name",
              "type": "string",
              "placeholder": "192.168.1.60 or shellyplusrgbwpm.local"
            },
            "showDimmer1": {
              "title": "Show Dimmer 1",
              "type": "boolean",
              "default": true
            },
            "showDimmer2": {
              "title": "Show Dimmer 2",
              "type": "boolean",
              "default": true
            },
            "showDimmer3": {
              "title": "Show Dimmer 3",
              "type": "boolean",
              "default": true
            },
            "showDimmer4": {
              "title": "Show Dimmer 4",
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  },
  "form": [
    "name",
    "devices",
    {
      "type": "help",
      "helpvalue": "Add one or more devices. Dimmer checkboxes apply only when that device is in light profile."
    }
  ]
}

{
  "pluginAlias": "ShellyPlusRGBWPM",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Shelly Plus RGBW PM",
  "schema": {
    "type": "object",
    "required": [
      "name",
      "devices"
    ],
    "properties": {
      "name": {
        "title": "Display Name",
        "type": "string",
        "default": "Shelly Plus RGBW PM"
      },
      "devices": {
        "title": "Shelly Devices",
        "type": "array",
        "minItems": 1,
        "items": {
          "title": "Shelly Device",
          "type": "object",
          "required": [
            "host"
          ],
          "properties": {
            "name": {
              "title": "Device Name",
              "type": "string",
              "default": "Shelly Plus RGBW PM"
            },
            "host": {
              "title": "IP Address or mDNS Name",
              "type": "string",
              "placeholder": "192.168.1.60 or shellyplusrgbwpm.local"
            },
            "showDimmer1": {
              "title": "Show Dimmer 1",
              "type": "boolean",
              "default": true
            },
            "showDimmer2": {
              "title": "Show Dimmer 2",
              "type": "boolean",
              "default": true
            },
            "showDimmer3": {
              "title": "Show Dimmer 3",
              "type": "boolean",
              "default": true
            },
            "showDimmer4": {
              "title": "Show Dimmer 4",
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  },
  "form": [
    "name",
    {
      "key": "devices",
      "type": "array",
      "add": "Add Device",
      "items": {
        "type": "section",
        "items": [
          "devices[].name",
          "devices[].host",
          {
            "type": "help",
            "helpvalue": "Dimmer checkboxes apply only when that device is in light profile."
          },
          {
            "type": "fieldset",
            "title": "Light Mode Dimmers",
            "expandable": true,
            "expanded": false,
            "items": [
              "devices[].showDimmer1",
              "devices[].showDimmer2",
              "devices[].showDimmer3",
              "devices[].showDimmer4"
            ]
          }
        ]
      }
    },
    {
      "type": "help",
      "helpvalue": "Add one or more Shelly devices."
    }
  ]
}
